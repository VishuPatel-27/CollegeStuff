<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollegeDocumentsActivity"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/ic_back_btn"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:onClick="onClickBack"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/mysy_Documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textSize="30sp"
            android:padding="20dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/clg_menu_item_1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDownload"
            >

            <ImageView
                android:id="@+id/clg_menu_item_btn_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_download_file"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:padding="10dp"
                android:onClick="onClickDownload"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Self Declaration For non IT Return"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clg_menu_item_2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDownload"
            >

            <ImageView
                android:id="@+id/clg_menu_item_btn_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_download_file"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:padding="10dp"
                android:onClick="onClickDownload"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Self Declaration"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clg_menu_item_3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDownload"
            >

            <ImageView
                android:id="@+id/clg_menu_item_btn_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_download_file"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:padding="10dp"
                android:onClick="onClickDownload"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Letter Head For Freshers"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clg_menu_item_4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDownload"
            >

         <ImageView
                android:id="@+id/clg_menu_item_btn_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_download_file"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:padding="10dp"
                android:onClick="onClickDownload"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Letter Head For Renewals"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clg_menu_item_5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDownload"
            >

            <ImageView
                android:id="@+id/clg_menu_item_btn_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_download_file"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:padding="10dp"
                android:onClick="onClickDownload"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Bonafied Certificate"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clg_menu_item_6"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDownload">

            <ImageView
                android:id="@+id/clg_menu_item_btn_6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/ic_download_file"
                android:onClick="onClickDownload"
                android:padding="10dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Form of Character Certificate"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>