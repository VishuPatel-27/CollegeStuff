<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContainerActivity"
    android:background="#EEEEEE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/ic_back_btn"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:onClick="onClickBack"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Documents List"
            android:textSize="20sp"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Aadhaar Card"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Self Declaration ( Original )"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="12th Marksheet"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Admmisson Letter From ACPC"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Income Certificate from TDO / Mamlatdar"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Fee Receipt"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Letter Pad"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Hostel fee/Food bill Receipt"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="First page print of savings account passbook ( With IFS Code )"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickSelfDeclaration"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="IT Return Copy or Self-declaration of non-receipt of income taxable income"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:onClick="onClickSelfDeclaration"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickSelfDeclaration"
                />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>