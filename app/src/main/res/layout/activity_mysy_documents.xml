<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MysyDocuments"
    android:background="#EEEEEE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/ic_back_btn"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:onClick="onClickBack"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/mysy_Documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textSize="30sp"
            android:padding="20dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickFreshApplication"
            >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:text=">>"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:onClick="onClickFreshApplication"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Fresh Application"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:onClick="onClickFreshApplication"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickRenewalApplication"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickRenewalApplication"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Renewal Application"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:onClick="onClickRenewalApplication"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDelayedApplication"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickDelayedApplication"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Delayed Application"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:onClick="onClickDelayedApplication"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>