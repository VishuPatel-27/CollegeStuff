<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MysyActivity"
    android:background="#EEEEEE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/ic_back_btn"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:onClick="onClickBack"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/mysy_Instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="30sp"
            android:padding="20dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickDocuments"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickDocuments"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="List of document Formats"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:onClick="onClickDocuments"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mysy_menu_item2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickMenuItem"
            >

            <Button
                android:id="@+id/mysy_menu_item2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickMenuItem"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Important instruction for Aadhaar linking"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mysy_menu_item3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickMenuItem"
            >

            <Button
                android:id="@+id/mysy_menu_item3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickMenuItem"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="List of Help Centers"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mysy_menu_item4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickMenuItem"
            >

            <Button
                android:id="@+id/mysy_menu_item4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickMenuItem"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Instruction to students for returning sahay"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mysy_menu_item5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickMenuItem"
            >

            <Button
                android:id="@+id/mysy_menu_item5_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickMenuItem"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Guidelines for Technical Students"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mysy_menu_item6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickMenuItem"
            >

            <Button
                android:id="@+id/mysy_menu_item6_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:onClick="onClickMenuItem"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Important instruction for every student"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mysy_menu_item7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickMenuItem"
            >

            <Button
                android:id="@+id/mysy_menu_item7_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickMenuItem"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Important instruction for pending documents"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>