<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DigitalActivity"
    android:background="#EEEEEE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/ic_back_btn"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:onClick="onClickBack"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/digital_Documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textSize="30sp"
            android:padding="20dp"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Caste Certificate issued by Competent authorities"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="First Page Of Bank PassBook/Cancelled Cheque showing IFSC code and account no"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Fee Receipt of Current Course Year"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Marksheet of Previous academic last board/university examination"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Income Certificate issued by Competent Authorities"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="School Leaving Certificate (If any)"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_btn"
            android:onClick="onClickBonafide"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:layout_marginLeft="5dp"
                android:text=">>"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:onClick="onClickBonafide"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="School/College Current Year Bonafide Certificate"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp"
                android:onClick="onClickBonafide"
                />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#344955"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Identity Card Issued by College/University/School/Institute (If any)"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>